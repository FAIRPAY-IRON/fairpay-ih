<div class="row">
    <div class='particle-network-animation'></div>
    <div class="bet-header center">
        <h2> <%= evnt.country_name %> </h2>
        <h5> - <%= evnt.league_name %> - </h5>
    </div>

    <div class="bet-description center">
        <p>
           <%= bet.description %>
        </p>
    </div>

    <div id="bet-live-result" class="col s12">
        <div class="row">
            <div id="left-result" class="col s4 center">
                <div class="hometeam_name">
                    <h4><%= evnt.match_hometeam_name %></h4>
                </div>
                <hr>
                <h1 class="hometeam_score"><%= evnt.match_hometeam_score %></h1>
                <hr>
                <div class="left-player">
                    <% if (bet.team === 'home') { %>
                        <h5><%= user.username %></h5>
                        <h6><%= bet.money %> $</h6>
                    <% } else { %>
                        <h5>???</h5>
                        <h6>??? $</h6>
                    <% } %>
                </div>
            </div>
            <div class="col s4 center">
                <h1 style="margin-top: 100px;">:</h1>
            </div>
            <div id="right-result" class="col s4 center">
                <div class="awayteam_name">
                    <h4><%= evnt.match_awayteam_name %></h4>
                </div>
                <hr>
                <h1 class="awayteam_score"><%= evnt.match_awayteam_score %></h1>
                <hr>
                <div class="right-player">
                    <% if (bet.team === 'home') { %>
                        <h5>???</h5>
                        <h6>??? $</h6>
                    <% } else { %>
                        <h5><%= user.username %></h5>
                        <h6><%= bet.money %> $</h6>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="row col s6 offset-s3">
        <div class="input-field col s12">
            <div id="map" class="bet-map"></div>
        </div>
    </div>

    <% if (bet.users[0] !== user._id) { %>
        <div class="col s4 offset-s4 center">
            <button class="btn waves-effect waves-light btn-large red" type="button" name="button"><a href="#">JOIN BET</a></button>
        </div>
    <% } %>
</div>

<script type="text/javascript">
    initMap();
</script>

<script type="text/javascript" src="/javascripts/dotnet.js"></script>
