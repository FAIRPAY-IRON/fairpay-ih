<div class="row">
    <div class="col s4 offset-s4 center">
        <img class="form-logo" src="/images/burning-red-logo.png" width="160px" alt="logo">
    </div>
    <div class="col s4 offset-s4 center">
        <h3>Edit profile</h3>
    </div>

    <div class="row">
        <form class="" action="/edit" method="post">
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <i class="material-icons prefix">account_circle</i>
                    <label for="username">Name: </label>
                    <input type="text" name="username" value="<%= typeof user != 'undefined' && user.username ? user.username : '' %>">
                </div>

                <div class="input-field col s6 offset-s3">
                    <i class="material-icons prefix">image</i>
                    <label for="picture">Image URL: </label>
                    <input type="text" size="100" name="picture" value="<%= typeof user != 'undefined' && user.picture ? user.picture : '' %>">
                </div>

                <div class="input-field col s6 offset-s3">
                    <i class="material-icons prefix">attach_money</i>
                    <label for="money">Add money: </label>
                    <input type="number" min="0" max="20" name="money" value="20">
                </div>

            </div>
            <button type="submit" class="btn waves-effect waves-light red z-depth-4 col s2 offset-s5" name="button">Save <i class="material-icons right">send</i></button>
        </form>
    </div>
</div>
